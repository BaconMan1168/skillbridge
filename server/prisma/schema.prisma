generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                Int           @id @default(autoincrement())
  name              String
  email             String        @unique
  password          String
  bio               String?
  rating            Float?        @default(0)
  sessionsCompleted Int           @default(0)
  createdAt         DateTime      @default(now())
  userSkills        UserSkill[]
  helpRequests      HelpRequest[] @relation("requester")
  sessionsAsMentor  Session[]     @relation("mentor")
  sessionsAsLearner Session[]     @relation("learner")
}

model Skill {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  userSkills   UserSkill[]
  helpRequests HelpRequest[]
}

model UserSkill {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
  skill   Skill  @relation(fields: [skillId], references: [id])
  skillId Int
  role    String

  @@unique([userId, skillId, role])
}

model HelpRequest {
  id          Int      @id @default(autoincrement())
  requester   User     @relation("requester", fields: [requesterId], references: [id])
  requesterId Int
  skill       Skill    @relation(fields: [skillId], references: [id])
  skillId     Int
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  session     Session?
}

model Session {
  id            Int          @id @default(autoincrement())
  mentor        User?        @relation("mentor", fields: [mentorId], references: [id])
  mentorId      Int?
  learner       User?        @relation("learner", fields: [learnerId], references: [id])
  learnerId     Int?
  helpRequest   HelpRequest? @relation(fields: [helpRequestId], references: [id])
  helpRequestId Int?         @unique
  startAt       DateTime?
  endAt         DateTime?
  rating        Int?
  messages      Message[]
  status        String       @default("pending")

  mentorReady  Boolean @default(false)
  learnerReady Boolean @default(false)
}

model Message {
  id        Int      @id @default(autoincrement())
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId Int
  senderId  Int
  content   String
  createdAt DateTime @default(now())
}
